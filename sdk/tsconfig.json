{
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "noImplicitReturns": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
    }
  },
  "include": [
    "src/**/*",
    "demo/**/*"
  ]
}
